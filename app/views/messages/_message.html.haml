.right-content__message
  .right-content__message-data
    %p.right-content__send-username
      = message.user.name
    %p.right-content__send-date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.right-content__message-text
  - if message.content.present?
    %p.message__content
      = message.content
  = image_tag message.image.url, class: 'message__image' if message.image.present?